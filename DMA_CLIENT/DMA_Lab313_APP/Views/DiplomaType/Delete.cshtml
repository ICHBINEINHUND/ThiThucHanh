@model DiplomaType
@{
    ViewData["Title"] = "Delete Diploma Type";
}

<h2>Delete Diploma Type</h2>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this diploma type?</h4>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model?.DiplomaTypeID</dd>
            
            <dt class="col-sm-3">Type Name</dt>
            <dd class="col-sm-9">@Model?.DiplomaTypeName</dd>
            
            <dt class="col-sm-3">Organization</dt>
            <dd class="col-sm-9">@Model?.OrganizationIssue</dd>
            
            <dt class="col-sm-3">Person Issue</dt>
            <dd class="col-sm-9">@Model?.PersonIssue</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="DiplomaTypeID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
