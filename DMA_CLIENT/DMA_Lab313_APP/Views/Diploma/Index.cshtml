@model IEnumerable<Diploma>
@{
    ViewData["Title"] = "Diplomas";
}

<h2>Diploma Management</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Diploma</a>
</p>

<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group" style="max-width: 400px;">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Search by Name or BirthPlace..." />
        <button type="submit" class="btn btn-outline-primary">Search</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Full Name</th>
            <th>Birth Date</th>
            <th>Birth Place</th>
            <th>Sex</th>
            <th>Rank</th>
            <th>Diploma Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DiplomaID</td>
                    <td>@item.FullName</td>
                    <td>@item.DOB?.ToString("dd/MM/yyyy")</td>
                    <td>@item.BirthPlace</td>
                    <td>@item.Sex?.SexName</td>
                    <td>@item.Rank?.RankName</td>
                    <td>@item.DiplomaType?.DiplomaTypeName</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.DiplomaID" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.DiplomaID" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
