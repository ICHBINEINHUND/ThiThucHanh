@model Diploma
@{
    ViewData["Title"] = "Delete Diploma";
}

<h2>Delete Diploma</h2>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this diploma?</h4>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model?.DiplomaID</dd>
            
            <dt class="col-sm-3">Full Name</dt>
            <dd class="col-sm-9">@Model?.FullName</dd>
            
            <dt class="col-sm-3">Birth Date</dt>
            <dd class="col-sm-9">@Model?.DOB?.ToString("dd/MM/yyyy")</dd>
            
            <dt class="col-sm-3">Birth Place</dt>
            <dd class="col-sm-9">@Model?.BirthPlace</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="DiplomaID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
