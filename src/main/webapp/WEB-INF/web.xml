<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Course Management Application</display-name>

    <!-- List Courses Servlet -->
    <servlet>
        <servlet-name>ListCoursesServlet</servlet-name>
        <servlet-class>com.course.servlet.ListCoursesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListCoursesServlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

    <!-- Add Course Servlet -->
    <servlet>
        <servlet-name>AddCourseServlet</servlet-name>
        <servlet-class>com.course.servlet.AddCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCourseServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <!-- Edit Course Servlet -->
    <servlet>
        <servlet-name>EditCourseServlet</servlet-name>
        <servlet-class>com.course.servlet.EditCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditCourseServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>

    <!-- Delete Course Servlet -->
    <servlet>
        <servlet-name>DeleteCourseServlet</servlet-name>
        <servlet-class>com.course.servlet.DeleteCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCourseServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>list</welcome-file>
    </welcome-file-list>
</web-app>
